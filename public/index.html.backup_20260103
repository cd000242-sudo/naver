                            function makeLinks(arr, containerId) {
                                const c = document.getElementById(containerId);
                                if (!c) return;
                                arr.forEach(item => {
                                    const [name, url] = item.split('|');
                                    const a = document.createElement('a');
                                    a.href = '#';
                                    a.onclick = function () { window.api.openExternalUrl(url); return false; };
                                    a.style.cssText = 'padding:0.35rem 0.6rem;background:rgba(255,255,255,0.05);border:1px solid rgba(255,255,255,0.1);border-radius:6px;text-decoration:none;font-size:0.7rem;color:rgba(255,255,255,0.7);white-space:nowrap;';
                                    a.textContent = name;
                                    c.appendChild(a);
                                });
                            }
                            setTimeout(() => { makeLinks(S, 's-grade-links'); makeLinks(A, 'a-grade-links'); makeLinks(B, 'b-grade-links'); makeLinks(C, 'c-grade-links'); }, 100);
